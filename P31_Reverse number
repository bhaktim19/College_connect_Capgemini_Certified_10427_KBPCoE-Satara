package com.edu.loop;

import java.util.Scanner;

public class RevNum {

	public static void main(String[] args) {
		Scanner sc = new Scanner (System.in);
		int num,a,rev=0;
		System.out.println("Enter a number :");
		num = sc.nextInt();
		
		while(num!=0) {
			a=num%10;
			rev=rev*10+a;
			num=num/10;
		}
		
		System.out.println("Reverse :"+rev);

	}

}
